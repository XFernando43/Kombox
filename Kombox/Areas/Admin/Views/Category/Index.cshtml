@using Kombox.Models.Models;
@model List<Category>

<div class="card shadow border-0 mt-4 py-2">
    <div class="card-header ml-0 py-3">
        <div class="row pt-4 pb-4">
            <div class="col-6">
                <h2 class="text-primary px-4">
                    Category List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create new Category
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-striped">
            <tr>
                <th class="text-center">Actions</th>
                <th>Category ID</th>
                <th>Category name</th>
                <th>Category Display</th>
            </tr>
            <tbody>
                @foreach (var obj in Model.OrderBy(or => or.CategoryId))
                {
                    <tr>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id=@obj.CategoryId class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id=@obj.CategoryId class="btn btn-danger mx-2">
                                    delete
                                </a>
                            </div>
                        </td>
                        <td>@obj.CategoryId</td>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<br />
<br />
<br />
<br />

@* Este script Evita que la pagina recarge y se hagan las validaciones correspondientes *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}