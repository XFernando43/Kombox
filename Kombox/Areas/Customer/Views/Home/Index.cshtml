@using Kombox.Models.Models;
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var obj in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@obj.ImageUrl" class="card-img-top rounded" style="height:406px;" /> @*object-fit: cover;*@
                        <div class="pl-1 p-2">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@obj.Title</p>
                            <p class="card-title text-warning text-center">@obj.Author</p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                                List Price:
                                <span class="text-decoration-line-through">
                                    @obj.Price100.ToString("C")
                                </span>
                            </p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center">
                                As Low as:
                                <span>
                                    @obj.Price100.ToString("C")
                                </span>
                            </p>
                        </div>
                        <div class="pl-1 text-center">
                            <a asp-controller="Home" asp-action="Details" asp-route-ProductId="@obj.ProductId"
                               class="btn btn-outline-primary bg-primary border-0 form-control">
                                <span class="text-light">Details</span>
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    }
</div>


<br />
<br />
<br />

